<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.lebo.repository.mybatis.GoldOrderDao">

    <resultMap id="goldOrderDetailMap" type="GoldOrder">
        <id property="id" column="id"/>
        <result property="mongoUserId" column="mongo_user_id"/>
        <result property="orderDate" column="order_date"/>
        <result property="quantity" column="quantity"/>
        <result property="discount" column="discount"/>
        <result property="status" column="status"/>
        <result property="goldProduct.id" column="gold_product_id"/>
    </resultMap>

    <insert id="save" parameterType="GoldOrder" useGeneratedKeys="true" keyProperty="id">
		insert into vg_gold_order (
		mongo_user_id,
		gold_product_id,
		quantity,
		discount,
		order_date,
		status)
		values (
		#{mongoUserId},
		#{goldProduct.id},
		#{quantity},
		#{discount},
		#{orderDate},
		#{status})
	</insert>

    <select id="getWithDetail" parameterType="long" resultMap="goldOrderDetailMap">
        select id,
        mongo_user_id,
        gold_product_id,
        quantity,
        discount,
        order_date,
        status
        from vg_order
        where id = #{id}
    </select>

</mapper>
