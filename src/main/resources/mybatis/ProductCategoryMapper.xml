<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.lebo.repository.mybatis.ProductCategoryDao">

    <resultMap id="productCategoryMap" type="ProductCategory">
        <id property="productCategoryId" column="product_category_id" />
        <result property="name" column="name" />
    </resultMap>

    <select id="get" parameterType="long" resultMap="productCategoryMap">
        select product_category_id,
        name
        from ec_product_category
        where product_category_id = #{productCategoryId}
    </select>

</mapper>
