<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.lebo.repository.mybatis.UserGoldDao">

    <resultMap id="userGoldMap" type="UserGold">
        <id property="userId" column="user_id"/>
        <result property="gold" column="gold"/>
        <result property="consumeGold" column="consume_gold"/>
        <result property="recharge" column="recharge"/>
    </resultMap>

    <select id="getByUserId" parameterType="string" resultMap="userGoldMap">
        select user_id,
        gold,
        consume_gold,
        recharge
        from vg_user_gold
        where user_id = #{userId}
    </select>

    <select id="getUserGold" parameterType="string" resultType="int">
        select gold
        from vg_user_gold
        where user_id = #{userId}
    </select>

    <update id="update" parameterType="UserGold">
        update vg_user_gold
        <set>
            <if test="gold != null">
                gold = #{gold},
            </if>
            <if test="consumeGold != null">
                consume_gold = #{consumeGold},
            </if>
            <if test="recharge != null">
                recharge = #{recharge},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <insert id="insert" parameterType="UserGold">
        insert into vg_user_gold(
        <if test="gold != null">
            gold,
        </if>
        <if test="consumeGold != null">
            consume_gold,
        </if>
        <if test="recharge != null">
            recharge,
        </if>
        user_id
        ) values (
        <if test="gold != null">
            #{gold},
        </if>
        <if test="consumeGold != null">
            #{consumeGold},
        </if>
        <if test="recharge != null">
            #{recharge},
        </if>
        #{userId}
        )
    </insert>

</mapper>
